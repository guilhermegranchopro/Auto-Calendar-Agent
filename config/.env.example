# EY AI Challenge Deadline Manager - Environment Configuration
# Copy this file to .env and fill in your actual values

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8502
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Application Configuration
APP_NAME=EY AI Deadline Manager
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=deadline_manager.log

# Data Processing Configuration
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=pdf,jpg,jpeg,png,jfif,docx
DEFAULT_REFERENCE_DATE=auto

# Portuguese Tax Configuration
TAX_YEAR=2025
ENABLE_WORKING_DAYS=true
ENABLE_HOLIDAYS=true
TIMEZONE=Europe/Lisbon

# Business Metrics Configuration
MANUAL_PROCESSING_TIME_MIN=15
AI_PROCESSING_TIME_MIN=2
HOURLY_RATE_EUR=75
ENABLE_METRICS_TRACKING=true

# Demo Configuration
DEMO_MODE=false
SAMPLE_DATA_PATH=Data/
ENABLE_LIVE_DEMO=true

# Security Configuration
ENABLE_AUTH=false
SESSION_TIMEOUT_HOURS=8
MAX_UPLOAD_SIZE_MB=16
